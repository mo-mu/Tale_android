<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/setting_bg_img"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/txt_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="잠금 암호"
        android:textColor="@color/white"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="4자리의 잠금 번호를 설정해주세요."
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <com.andrognito.pinlockview.IndicatorDots
        android:id="@+id/indicator_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <com.andrognito.pinlockview.PinLockView
        android:id="@+id/pin_lock_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        app:dotEmptyBackground="@drawable/dot_empty"
        app:dotFilledBackground="@drawable/dot_filled"
        app:indicatorType="fillWithAnimation"
        app:keypadButtonSize="72dp"
        app:keypadDeleteButtonPressedColor="#C8C8C8"
        app:keypadHorizontalSpacing="36dp"
        app:keypadTextColor="#E6E6E6"
        app:keypadTextSize="16dp"
        app:keypadVerticalSpacing="24dp"
        app:pinLength="4"/>
</LinearLayout>