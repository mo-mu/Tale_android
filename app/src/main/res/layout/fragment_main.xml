<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">


        <ImageView
            android:layout_width="62dp"
            android:layout_height="52dp"
            android:background="@drawable/fox_big_profile"
            android:layout_marginLeft="38dp"
            android:layout_marginBottom="7dp"/>

        <LinearLayout
            android:id="@+id/board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:background="@drawable/speech_bubble_img">
            <TextView
                android:id="@+id/txtQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:textSize="20dp"
                android:textColor="@color/question"/>
            <ImageView
                android:id="@+id/imgStar"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@drawable/star_gray_img"
                android:visibility="gone"
                android:layout_marginTop="14dp"/>
            <TextView
                android:id="@+id/txtAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textSize="16dp"
                android:maxLines="8"
                android:ellipsize="end"
                android:textColor="@color/answer"
                android:lineSpacingExtra="7dp"
                android:visibility="gone"/>
            <Button
                android:id="@+id/btnWrite"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/write_btn"
                android:layout_gravity="right"/>
        </LinearLayout>
        <TextView
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/txtRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="@string/main_refresh"/>
    </LinearLayout>
</FrameLayout>